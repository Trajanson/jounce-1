// NAVIGATION BAR CHEVRONS (LEFT, RIGHT) **************************************
// ****************************************************************************
// ****************************************************************************

.navigation-chevron {
 position: absolute;
 top: 2.95%;
 width: 1rem;
 height: 1rem;
 background: transparent;
 border-top: .4rem solid $chevron-color;
 border-right: .4rem solid $chevron-color;
 box-shadow: 0 0 0 lightgray;
 -webkit-transition: all 200ms ease;
 transition: all 200ms ease;
}
.navigation-chevron.navigation-chevron-left {
 left: 9.5%;
 -webkit-transform: translate3d(0, -50%, 0) rotate(-135deg);
         transform: translate3d(0, -50%, 0) rotate(-135deg);
}
.navigation-chevron.navigation-chevron-right {
 left: 12.5%;
 -webkit-transform: translate3d(0, -50%, 0) rotate(45deg);
         transform: translate3d(0, -50%, 0) rotate(45deg);
}
.navigation-chevron:hover {
 border-top:   .4rem solid $chevron-highlight-color;
 border-right: .4rem solid $chevron-highlight-color;
 box-shadow:   .2rem -.2rem 0 white;
}
.navigation-chevron:hover.navigation-chevron-left {
 left: 9.4%;
}
.navigation-chevron:hover.navigation-chevron-right {
 left: 13%;
}


















