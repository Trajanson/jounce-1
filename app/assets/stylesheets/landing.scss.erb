ul {
  list-style: none;
}

img {
  display: block;
  width: 100%;
  height: auto;
}

a {
  text-decoration: none;
}








html {

  background: url(image_path('landing_background_a.jpg')) no-repeat left center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  overflow: hidden;
  height: 100%
}

body {
  box-sizing: content-box;
  font: 12px/1 'Montserrat', sans-serif;
}












header {
  background: $nav-bar-background;
  display: block;
}

.header a {
  display: block;
  padding: 10px 20px;
  color: $nav-bar-font-color;
}

.header-nav {
    width: 70%;
    margin: 0 auto;
}

.header-logo {
  float: left;
  font-weight: bold;
}

.header-list {
  float: right;
}

.header-list > li {
  float: left;
}






.content {
  float: right;
  width: 61%;
  // background: rgba(56, 94, 109, 0.42);

  position: absolute;
  right: 0%;
  height: 100%;
  // background: linear-gradient(0deg, rgba(59, 144, 150, 0) 0%, rgba(136, 85, 53, 0.42) 100%);
}

#image-filter {
  width: 61%;
  background: linear-gradient(0deg, rgba(59, 144, 150, 0) 0%, rgba(136, 85, 53, 0.42) 100%);
  position: absolute;
  right: 0%;
  height: 61%;

}


#video-backing{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: black;
  width: 80%;
  margin: auto;
  height: 317px;
}






.fancy-button-div {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: $signup-button-width;
  font-family: 'Open Sans', sans-serif;
}

.btn {
  display: block;
  height: $signup-button-height;
  width: $signup-button-width;
  position: relative;
  overflow: hidden;
  text-decoration: none;
  text-transform: uppercase;
  letter-spacing: 2px;
  color: white;
  font-size: 14px;
  text-align: center;
  border-radius: 2%;
  box-shadow: 5px 6px 25px #888888;

  &:after {
    position: absolute;
    content:'';
    display: inline-block;
    background: rgba(59,173,227,1);
    background: linear-gradient(45deg, #287194 0%, #57e6ab 25%, #ad9f7a 51%, #ff357f 100%);
    height: $signup-button-height;
    width: 372px;
    z-index: -1;
    transform: translateX(-280px);
    transition: transform 400ms ease-in;

    width: 467px;
    left: 72%;
  }

  &:hover {
    transition: transform 400ms ease-in;

    &:after {
      // transform: translateX(-200px);
    }
  }
  span {
    position: relative;
    top: $pixels-from-top-for-signup-button-text;
  }
}

.new-line-below-button{
  display: inline;
  font-size: 12px;
}




