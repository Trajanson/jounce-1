  box-shadow: 4px 6px 17px #888888;
  height: 40%;
  width: 80%;

  display: flex;
  justify-content: center;
  align-items: center;

  font-family: 'Open Sans', sans-serif;

  line-height: 19px;

  margin-top: 45px;

  position: relative;

}

