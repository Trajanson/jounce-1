}






#informational-text {
  width: 200px;
  // height: 100px;
  background: teal;
  background: linear-gradient(45deg, #287194 0%, #57e6ab 25%, #ad9f7a 51%, #ff357f 100%);
  background: linear-gradient(45deg, #3b9096 0%, #57e6ab 25%, #ad9f7a 45%, #e4587d 100%);
  background: linear-gradient(45deg, rgba(59,144,150,$informational-box-transparency) 0%, rgba(87,230,171,$informational-box-transparency) 19%, rgba(134,191,144,$informational-box-transparency) 34%, rgba(173,159,122,$informational-box-transparency) 66%, rgba(195,130,123,$informational-box-transparency) 77%, rgba(198,126,123,$informational-box-transparency) 82%, rgba(228,88,125,$informational-box-transparency) 100%);
  background: linear-gradient(45deg, rgba(59, 144, 150, 0.6) 0%, rgba(87, 230, 171, 0.6) 19%, rgba(134, 191, 144, 0.6) 34%, rgba(173, 159, 122, 0.9) 66%, rgba(195, 130, 123, 0.9) 77%, rgba(198, 126, 123, 0.6) 82%, rgba(228, 88, 125, 1) 100%);

  margin: 0 auto;
  margin-top: 180px;

