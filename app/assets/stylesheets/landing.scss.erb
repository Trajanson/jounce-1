@font-face {
  font-family: 'Crash';
  src: image-url('crashFont.eot?#iefix')    format('embedded-opentype'), /* IE6-IE8 */
       image-url('crashFont.woff2')         format('woff2'), /* Super Modern Browsers */
       image-url('crashFont.woff')          format('woff'), /* Pretty Modern Browsers */
       image-url('crashFont.ttf')           format('truetype'), /* Safari, Android, iOS */

}


// COLORS *********************************************************************
// ****************************************************************************
$nav-bar-background: rgba(136, 85, 53, 0.42);
$nav-bar-font-color: #f9f9f9;


$informational-box-transparency: 0.6;
// ****************************************************************************
